<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CTA_StationDisplay.EstimateEntry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CTA_StationDisplay"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="recEntryLeft" Grid.Column="0">
            <TextBlock x:Name="topLine" Text="" FontSize="40" Foreground="White" FontWeight="Medium" Canvas.Left="50" FontFamily="Arial"/>
            <TextBlock x:Name="bottomLine" Text="" FontSize="100" Foreground="White" FontWeight="Bold" Canvas.Left="45" Canvas.Top="35" FontFamily="Arial"/>
        </Canvas>

        <Canvas x:Name="recEntryRight" Grid.Column="1">
            <TextBlock x:Name="timeEstimate" Width="125" Text="" FontSize="100" Foreground="White" FontWeight="Bold" Canvas.Left="150" TextAlignment="Right" Canvas.Top="20" FontFamily="Arial"/>
            <TextBlock x:Name="rightLineMin" Text="min" FontSize="100" Foreground="White" FontWeight="Normal" Canvas.Left="300" Canvas.Top="20" FontFamily="Arial"/>
        </Canvas>

    </Grid>
    

</UserControl>
